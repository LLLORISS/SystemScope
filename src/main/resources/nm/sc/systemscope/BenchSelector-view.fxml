<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nm.sc.systemscope.controllers.BenchSelectorController"
            prefHeight="250.0" prefWidth="400.0">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="40" prefWidth="500" prefHeight="300">
        <HBox alignment="CENTER" spacing="15">
            <HBox styleClass="HBoxSection">
                <Label text="Назва: " styleClass="file-label"/>
                <TextField fx:id="nameLogTextField" />
            </HBox>
            <Button text="Вибрати гру" fx:id="selectGameButton" onAction="#onSelectGameBtnClicked" styleClass="main-button"/>
        </HBox>
        <Label fx:id="selectedFileLabel" text="Файл не вибрано" styleClass="file-label"/>
        <Button text="Запустити бенчмарк" fx:id="startBenchmarkButton" onAction="#onStartBenchmarkBtnClicked" styleClass="main-button-start"/>
    </VBox>

</AnchorPane>
